@model CommentViewModel
@{
    ViewData["Title"] = $"Delete comment with ID: {Model.Id}";
}
<div class="container">
    <div class="section-top-border">
        <a asp-area="Admin" asp-controller="Comments" asp-action="Index" style="font-size: medium">Back to Manage Comments Page</a>
        <div class="col-lg-9 mx-auto pb-30">
            <h2 class="mt-3">@ViewData["Title"]</h2>
            <div class="comment-list top-wrapper comment-sec-area">
                <a asp-area="Author" asp-controller="Posts" asp-action="Details" asp-route-id="@Model.PostId" title="Post details">Post Id: @Model.PostId</a>
                <div class="row col-12 pt-2">
                    <div class="col-2 pl-0">
                        <img src="@Model.AuthorAvatarUrl" width="80%" alt="">
                    </div>
                    <div class="desc col-10 p-0">
                        <h5><a asp-area="Admin" asp-controller="Users" asp-action="Details" asp-route-id="@Model.AuthorId" title="User details">@Model.Author</a></h5>
                        <p class="date mb-1">@Model.CreationDate</p>
                        @if (Model.LastUpdateDate != string.Empty)
                        {
                            <p class="date">Edited on: @Model.LastUpdateDate</p>
                        }
                        <p class="comment">
                            @Model.Content
                        </p>
                    </div>
                </div>
            </div>
            <h3 class="text-danger text-center">Deleting this comment will permanently remove it from the database, and this cannot be recovered.</h3>
            <h3 class="text-danger text-center">Are you sure you want to delete comment with ID: @Model.Id ?</h3>
            <div class="form-group button-group-area text-center pt-3">
                <a asp-action="Destroy" asp-route-id="@Model.Id" class="genric-btn success circle">Delete</a>
                <a asp-action="Index" class="genric-btn default circle">Cancel</a>
            </div>
        </div>
    </div>
</div>