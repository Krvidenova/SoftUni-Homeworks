@model CategoryEditBindingModel
@{
    ViewData["Title"] = $"Edit Category \"{Model.Name}\"";
}

<div class="container">
    <div class="section-top-border">
        <h2 class="mb-10 col-md-6 mx-auto pl-0 text-center">@ViewData["Title"]</h2>
        <div class="row justify-content-center">
            <div class="col-md-6">
                <form method="post" asp-route-id="@Model.Id">
                    <hr />
                    <div asp-validation-summary="All" class="text-danger"></div>
                    @Html.FormGroupFor(m => m.Name)
                    <div class="form-group">
                        <label asp-for="@Model.Order"></label>
                        <input asp-for="@Model.Order" class="single-input-primary" min="1" />
                        <span asp-validation-for="@Model.Order" class="text-danger"></span>
                    </div>
                    @Html.FormGroupFor(m => m.Title)
                    <div class="form-group">
                        <label asp-for="@Model.Description"></label>
                        <textarea asp-for="@Model.Description" class="single-input-primary"></textarea>
                        <span asp-validation-for="@Model.Description" class="text-danger"></span>
                    </div>
                    <div class="form-group button-group-area text-center">
                        <button type="submit" class="genric-btn success circle">Edit</button>
                        <a asp-action="Details" asp-route-id="@Model.Id" class="genric-btn default circle">Cancel</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}



