@model CategoryDetailsViewModel
@{
    ViewData["Title"] = $"Details of Category \"{Model.Name}\"";
}

<div class="container">
    <div class="section-top-border">
        <a asp-area="Admin" asp-controller="Administration" asp-action="Index" style="font-size: medium">Back to Administration Page</a><br>
        <a asp-area="Admin" asp-controller="Categories" asp-action="Index" style="font-size: medium">Back to Manage Categories Page</a>
        <h2 class="mt-3 mb-20">@ViewData["Title"]</h2>
        <hr />
        <div class="with-background-area">
            <div class="row col-11 mx-auto p-4" style="font-size: larger">
                <div class="col-md-12 d-block">
                    <a asp-action="Edit" asp-route-id="@Model.Id" class="pull-right edit" title="Edit">
                        <i class="lnr lnr-pencil font-weight-bold edit" style="font-size: xx-large"></i>
                    </a>
                </div>
                <div class="col-md-7 p-2">
                    <label asp-for="Name" class="font-weight-bold mr-4">@nameof(Model.Name):</label>
                    @Model.Name
                </div>
                <div class="col-md-5 p-2">
                    <label asp-for="Order" class="font-weight-bold mr-4">@nameof(Model.Order):</label>
                    @Model.Order
                </div>
                <div class="col-md-7 p-2">
                    <label asp-for="Title" class="font-weight-bold mr-4">@nameof(Model.Title):</label>
                    @Model.Title
                </div>
                <div class="col-md-5 p-2">
                    <label asp-for="PostsCount" class="font-weight-bold mr-4">Posts Count:</label>
                    @Model.PostsCount
                </div>
                <div class="col-md-12 p-2">
                    <label asp-for="Description" class="font-weight-bold mr-4">@nameof(Model.Description):</label>
                    <div>@Model.Description</div>
                </div>
            </div>
        </div>
    </div>
</div>

