@model UserChangePasswordBindingModel

<div class="container">
    <div class="section-top-border">
        <a asp-area="Admin" asp-controller="Administration" asp-action="Index" style="font-size: medium">Back to Administration Page</a><br>
        <a asp-area="Admin" asp-controller="Users" asp-action="Index" style="font-size: medium">Back to Manage Users Page</a>
        <div class="col-lg-6 mx-auto">
            <h4 class="mt-30 mb-30 text-center">Change password of User with Username: @Model.Username <br/> ID: @Model.Id</h4>
        </div>
        <hr />
        <div class="row justify-content-center">
            <div class="col-md-4">
                <form id="change-password-form" asp-area="Admin" asp-controller="Users" asp-action="ChangePassword" method="post">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    @Html.FormGroupFor(model => model.OldPassword)
                    @Html.FormGroupFor(model => model.NewPassword)
                    @Html.FormGroupFor(model => model.ConfirmPassword)
                    <input type="hidden" value="@Model.Id" />
                    <input type="hidden" value="@Model.Username" />
                    <div class="form-group button-group-area text-center">
                        <button type="submit" class="primary-btn load-more pbtn-2 text-capitalize mx-auto">Update password</button>
                        <a asp-action="Index" class="genric-btn default circle pbtn-2 text-capitalize">Back</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
