@model IEnumerable<UserConciseViewModel>
@{
    ViewData["Title"] = "Manage Users";
}

<div class="container-fluid">
    <div class="section-top-border">
        <a asp-area="Admin" asp-controller="Administration" asp-action="Index" style="font-size: medium">Back to Administration Page</a>
        <h2 class="mt-3 mb-20">@ViewData["Title"]</h2>
        <h4>All Users</h4>
        <hr />
        <div class="progress-table-wrap">
            <div class="progress-table">
                <div class="table-head">
                    <div class="country pl-2">Username</div>
                    <div class="country">Email</div>
                    <div class="serial">Author ?</div>
                    <div class="serial">Admin ?</div>
                    <div class="percentage">Actions</div>
                </div>
                @Html.DisplayForModel()
            </div>
        </div>
    </div>
</div>
