@{
    Layout = "/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="section-top-border">
        <h2 class="mb-20">Manage your account</h2>
        <div class="row">
            <div class="col-md-9">
                <h4>Change your account settings</h4>
                <hr/>
                <div class="row">
                    <div class="col-md-5">
                        <partial name="_ManageNav"/>
                    </div>
                    <div class="col-md-7">
                        @RenderBody()
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @RenderSection("Scripts", required: false)
}
