@model PostConciseViewModel
@{
    string route = $"/{Model.CategoryName}/{Model.Id}/{Model.Slug}";
}
<div class="single-list single-travel flex-row d-flex">
    <div class="thumb w-25 col-3">
        <div class="date">
            <span>@Model.CreationDate</span><br>@Model.CreationYear
        </div>
        <img src="@Model.ImageUrl" alt="" width="100%" height="100%">
    </div>
    <div class="detail col-9">
        <a href="@route" Title="Details">
            <h4 class="pb-20">
                @Model.Title
            </h4>
        </a>
        <p>
            @Model.Content
        </p>
        <p class="footer pt-15">
            <i class="fa fa-eye" aria-hidden="true"></i>
            @Model.ViewCounter views
            <i class="ml-20 fa fa-comment-o" aria-hidden="true"></i>
            @Model.CommentsCount comments
        </p>
    </div>
</div>

