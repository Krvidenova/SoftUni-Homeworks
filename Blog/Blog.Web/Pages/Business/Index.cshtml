@page
@model Blog.Web.Pages.Business.IndexModel
@{
    ViewData["Title"] = $"{Model.Name} News";
}


<section class="top-section-area section-gap">
    <div class="container">
        <div class="row justify-content-between align-items-center d-flex">
            <div class="col-lg-9 top-left">
                <h1 class="text-white mb-20">@ViewData["Title"]</h1>
                <ul>
                    <li><a asp-area="" asp-controller="Home" asp-action="Index" asp-route-id="">Home</a></li>                    
                </ul>
            </div>
        </div>
    </div>
</section>
<div class="post-wrapper pt-100">
    <section class="post-area">
        <div class="container">
            <div class="row justify-content-center d-flex">
                <div class="col-lg-10">                   
                    @Html.DisplayFor(model => model.Posts)                    
                </div>               
            </div>
        </div>
    </section>
</div>
